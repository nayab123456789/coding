
#include <stdio.h>

int main() {
   int i;
   int itemnum [6];
   int total = 0;
   int count = 0;
   
for(i=1;i<6;i++){
printf("enter item number %d \n", i);
scanf("%d", &itemnum[i]);
total+=itemnum[i];
if (itemnum[i]>1000)
count++;
}


printf("your total bill is %d\n", total);
printf("your total items greater then 1000 are  %d", count);
    return 0;
}
